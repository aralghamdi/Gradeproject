<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setUpActivity">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/app_bar_layout"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profileimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/profile_toolbar"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/settings_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profileimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="98dp"
        android:drawableLeft="@drawable/name"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:hint="Full name "
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/settings_mobile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_username"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/mobile"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:hint="Mobile Number "
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/settings_city"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/country"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:hint="City"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/edit_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_profileimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="281dp"
        android:text="Edit profile information "
        android:textStyle="normal|bold|italic" />


</RelativeLayout>