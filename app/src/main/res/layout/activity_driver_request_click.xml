<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerRequestClickActivity">

    <include
        android:id="@+id/driverRequest_toolbar"
        layout="@layout/app_bar_layout"></include>

    <TextView
        android:id="@+id/request_customer_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/driverRequest_toolbar"
        android:layout_marginTop="70dp"
        android:text="Customer name"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/request_customer_mobile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/driverRequest_toolbar"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/request_customer_name"
        android:text="Customer mobile"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/driver_click_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_customer_name"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/customer_locationBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/driver_click_description"
        android:layout_marginTop="20dp"
        android:text="Customer location"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/accept_request"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_locationBtn"
        android:layout_marginTop="14dp"
        android:text="Accept request"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/delivery_completeBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/customer_locationBtn"
        android:layout_marginTop="14dp"
        android:text="Delivery completed" />

    <Button
        android:id="@+id/message_customerBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/delivery_completeBtn"
        android:layout_marginTop="14dp"
        android:text="Message customer" />


</RelativeLayout>