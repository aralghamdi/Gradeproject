<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/receiverMessage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/receiver_message_background"
        android:text="Receiver message"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/senderMessage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_alignParentTop="@+id/receiverMessage_text"
        android:layout_marginTop="2dp"
        android:background="@drawable/sender_messag_background"
        android:text="sender message"
        android:textColor="@android:color/background_light"
        android:padding="10dp"
        android:textSize="14sp"
        />


</RelativeLayout>