<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerRequestClickActivity">

    <include
        android:id="@+id/customer_request_toolbar"
        layout="@layout/app_bar_layout"></include>

    <TextView
        android:id="@+id/click_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/customer_request_toolbar"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:text="Description" />

    <Button
        android:id="@+id/delete_requestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Delete" />

    <Button
        android:id="@+id/message_driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_requestBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Message Driver" />

    <Button
        android:id="@+id/driver_locationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_driver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Driver location " />
</RelativeLayout>